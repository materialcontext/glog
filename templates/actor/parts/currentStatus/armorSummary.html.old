<div class="sideCarBox armorSideCar">
    <div>
        <!-- localize labels and headliens throughout doc-->
        <label class="resource-value" style="font-size: 20px;">Defense</label>
        {{#if actor.system.noSwim}} 
            <label style='color: var(--negative);'>{{actor.system.noSwimWarning}}</label><br/>
        {{else}}
            {{#if actor.system.strSwim}}
                    <label style='color: var(--warning);'>{{actor.system.strSwimWarning}}</label><br/>
            {{/if}}
        {{/if}}
    </div>
    {{#if actor.system.armorEquipped}}
    <div class="grid grid-1col">
        <div class="flexrow flex-group-left">
            <img src="systems/glog/resources/icons/shield.webp" class="icon-medium" style="margin-right: 10px; max-width: 35px!important; max-height: 45px!important;"/>
            <span class="resource-value input-small">{{actor.system.defense.value}}</span>
        </div>
    </div>
    {{else}}
    <div class="flexrow flex-group-center" style="height: 60px;"><span class="resource-value">No Armor Equipped</span></div>
    {{/if}}
</div>